    {% for type, messages in app.flashes %}
        {# Map des types Symfony -> Bootstrap #}
        {% set bs =
            type == 'success' ? 'success' :
            (type == 'error' ? 'danger' :
            (type == 'warning' ? 'warning' : 'info')) %}
        {% set icon =
            type == 'success' ? 'check-circle-fill' :
            (type == 'error' ? 'x-circle-fill' :
            (type == 'warning' ? 'exclamation-triangle-fill' : 'info-circle-fill')) %}

        {% for message in messages %}
            <div class="alert alert-{{ bs }} d-flex align-items-center alert-dismissible fade show" role="alert">
                <svg class="bi me-2 flex-shrink-0" width="1.2em" height="1.2em" aria-hidden="true" focusable="false">
                    <use href="{{ bi }}#{{ icon }}"></use>
                </svg>
                <div class="small">{{ message }}</div>
                <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert" aria-label="Fermer"></button>
            </div>
        {% endfor %}
    {% endfor %}
