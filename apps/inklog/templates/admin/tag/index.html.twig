{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des tags{% endblock %}
{% block content_title %}Gestion des tags{% endblock %}

{% block content %}
    <a class="btn btn-outline-primary mt-4 mb-4" href="{{ path('admin_tag_new') }}">
        <svg class="bi pe-none me-2" width="16" height="16" aria-hidden="true">
            <use href="{{ bi }}#plus-square-fill"></use>
        </svg>
        Cr√©er un nouveau tag
    </a>

    <div class="table-responsive small">
        <table class="table table-striped table-sm align-middle">
            <thead>
            <tr>
                <th scope="col">Tag</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            {% for tag in tags %}
            <tr>
                <td>{{ tag.name }}</td>
                <td>
                    <a href="{{ path('admin_tag_edit', {id: tag.id}) }}" class="btn btn-link">
                        Editer
                    </a>
                </td>
                <td>
                    <form action="{{ url('admin_tag_delete', { id: tag.id }) }}"
                          method="post"
                          class="d-inline"
                    >
                        <input type="hidden" name="_method" value="DELETE"/>
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tag.id) }}"/>
                        <button type="submit"
                                class="btn btn-link"
                                onclick="return confirm('Supprimer le tag {{ tag.name }}?');">
                            Supprimer
                        </button>
                    </form>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
