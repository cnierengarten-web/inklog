{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des catégories{% endblock %}
{% block content_title %}Gestion des catégories{% endblock %}

{% block content %}
    <a class="btn btn-outline-primary mt-4 mb-4" href="{{ path('admin_category_new') }}">
        <svg class="bi pe-none me-2" width="16" height="16" aria-hidden="true">
            <use href="{{ bi }}#plus-square-fill"></use>
        </svg>
        Créer une nouvelle catégorie
    </a>
    <div class="table-responsive small">
        <table class="table table-striped table-sm align-middle">
            <thead>
            <tr>
                <th scope="col">Catégorie</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.name }}</td>
                    <td>
                        <a href="{{ path('admin_category_edit', {id: category.id}) }}" class="btn btn-link" >
                            Editer
                        </a>
                    </td>
                    <td>
                        <form action="{{ url('admin_category_delete', { id: category.id }) }}"
                              method="post"
                              class="d-inline mb-0"
                        >
                            <input type="hidden" name="_method" value="DELETE"/>
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}"/>
                            <button type="submit"
                                    class="btn btn-link"
                                    onclick="return confirm('Supprimer la catégorie {{ category.name }}?');">
                                Supprimer
                            </button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
